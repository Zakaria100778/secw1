extends layout

block content
  .guide-container
    h2.guide-title= guide.Title

    div.description !{guide.Description.replace(/\n/g, '<br>')}

    p.tags
      strong Tags:
      |  #{guide.Tags}

    p.author
      small Posted by #{guide.Username}

    if user
      form.like-form(action=`/detail/${guide.Guide_ID}/react`, method="POST")
        button(type="submit", name="reaction", value="like") üëç Like (#{likes || 0})
        button(type="submit", name="reaction", value="dislike") üëé Dislike (#{dislikes || 0})

    hr

    h3 Comments

    if comments.length
      each comment in comments
        .comment
          p.comment-author
            strong= comment.Username
            |  said:
          p.comment-text= comment.Comment_Text
          hr
    else
      p No comments yet.

    hr

    if user
      h4 Leave a Comment
      form(action=`/detail/${guide.Guide_ID}/comment`, method="POST")
        textarea(name="comment", rows="3", required)
        br
        button(type="submit") Post Comment
    else
      p
        a(href="/auth") Log in
        |  to leave a comment.

  style.
    .guide-container {
      max-width: 800px;
      margin: 3rem auto;
      padding: 2rem 3rem;
      background-color: #ffffff;
      border-radius: 12px;
      box-shadow: 0 4px 16px rgba(0, 0, 0, 0.08);
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .guide-title {
      color: #2c3e50;
      font-size: 2rem;
      margin-bottom: 1.5rem;
      text-align: center;
    }

    .description {
      font-size: 1.1rem;
      line-height: 1.7;
      color: #333;
      margin-bottom: 1.2rem;
    }

    .tags {
      font-style: italic;
      color: #888;
      margin-bottom: 0.5rem;
    }

    .author {
      color: #666;
      font-size: 0.9rem;
      margin-bottom: 2rem;
    }

    .like-form {
      display: flex;
      gap: 1rem;
      margin-bottom: 2rem;
    }

    .like-form button {
      background-color: #3498db;
      color: white;
      border: none;
      padding: 8px 16px;
      font-size: 1rem;
      border-radius: 8px;
      cursor: pointer;
      transition: background-color 0.3s ease;
    }

    .like-form button:hover {
      background-color: #2980b9;
    }

    .comment {
      background-color: #f7f9fa;
      padding: 1rem;
      border-left: 4px solid #3498db;
      border-radius: 6px;
      margin-bottom: 1rem;
    }

    .comment-author {
      font-weight: 600;
      color: #2c3e50;
      margin-bottom: 0.3rem;
    }

    .comment-text {
      color: #444;
      margin-left: 0.5rem;
    }

    textarea {
      width: 100%;
      font-size: 1rem;
      padding: 0.75rem;
      border: 1px solid #ccc;
      border-radius: 6px;
      resize: vertical;
    }

    button[type="submit"] {
      margin-top: 0.75rem;
      background-color: #2ecc71;
      color: white;
      border: none;
      padding: 10px 20px;
      font-weight: bold;
      border-radius: 6px;
      cursor: pointer;
      transition: background-color 0.3s ease;
    }

    button[type="submit"]:hover {
      background-color: #27ae60;
    }

    a {
      color: #2980b9;
      text-decoration: none;
    }

    a:hover {
      text-decoration: underline;
    }
