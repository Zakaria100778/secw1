extends layout

block content
  .guide-container
    h2= guide.Title
    div.description !{guide.Description.replace(/\n/g, '<br>')}
    
    p.tags
      strong Tags: 
      | #{guide.Tags}

    p.author
      small Posted by #{guide.Username}

    if user
      form(action=`/detail/${guide.Guide_ID}/react`, method="POST").like-form
        button(type="submit", name="reaction", value="like") üëç Like (#{likes || 0})
        button(type="submit", name="reaction", value="dislike") üëé Dislike (#{dislikes || 0})

    hr

    h3 Comments

    if comments.length
      each comment in comments
        .comment
          p
            strong= comment.Username
            |  said:
          p= comment.Comment_Text
          hr
    else
      p No comments yet.

    hr

    if user
      h4 Leave a Comment
      form(action=`/detail/${guide.Guide_ID}/comment`, method="POST")
        textarea(name="comment", rows="3", required)
        br
        button(type="submit") Post Comment
    else
      p
        a(href="/auth") Log in
        |  to leave a comment.

  style.
    .guide-container {
      max-width: 800px;
      margin: auto;
      padding: 2rem;
    }
    .description {
      font-size: 1.1rem;
      margin-bottom: 1rem;
      line-height: 1.6;
      white-space: pre-line;
    }
    .tags {
      font-style: italic;
      color: #888;
    }
    .author {
      color: #666;
      font-size: 0.9rem;
      margin-bottom: 1rem;
    }
    .like-form {
      margin-bottom: 1.5rem;
    }
    .like-form button {
      margin-right: 1rem;
      background-color: #f1f1f1;
      border: none;
      padding: 8px 16px;
      font-size: 1rem;
      border-radius: 5px;
      cursor: pointer;
    }
    .like-form button:hover {
      background-color: #ddd;
    }
    .comment {
      margin-bottom: 1rem;
      background-color: #f9f9f9;
      padding: 1rem;
      border-radius: 6px;
    }
    textarea {
      width: 100%;
      font-size: 1rem;
      padding: 0.5rem;
      border-radius: 4px;
    }
    button[type="submit"] {
      margin-top: 0.5rem;
      background-color: #2ecc71;
      color: white;
      border: none;
      padding: 10px 20px;
      font-weight: bold;
      border-radius: 4px;
      cursor: pointer;
    }
    button[type="submit"]:hover {
      background-color: #27ae60;
    }
