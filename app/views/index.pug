extends layout

block content
  .main-content
    if user
      h1 Welcome, #{user.username}!
      p Ready to explore more guides or share your own?
      .button-container
        a.button(href="/listing") Explore Guides
        a.button(href="/user-list") User List
        a.button(href="/logout") Logout
    else
      h1 #{heading}
      p Share and discover the best gaming strategies with our community.
      p Join thousands of gamers improving their skills every day!
      .button-container
        a.button(href="/listing") Explore Guides
        a.button(href="/user-list") User List
        a.button(href="/auth") Login / Register

  style.
    .main-content {
      max-width: 800px;
      margin: 0 auto;
      padding: 2rem;
      text-align: center;
    }
    .button-container {
      display: flex;
      justify-content: center;
      gap: 20px;
      margin-top: 2rem;
      flex-wrap: wrap;
    }
    .button {
      display: inline-block;
      padding: 12px 24px;
      background-color: #2ecc71;
      color: white;
      text-decoration: none;
      border-radius: 4px;
      font-weight: bold;
      transition: all 0.3s ease;
      box-shadow: 0 2px 5px rgba(0,0,0,0.1);
    }
    .button:hover {
      background-color: #27ae60;
      transform: translateY(-2px);
      box-shadow: 0 4px 8px rgba(0,0,0,0.15);
    }
    h1 {
      color: #2c3e50;
      margin-bottom: 1rem;
    }
    p {
      color: #7f8c8d;
      margin-bottom: 0.5rem;
      font-size: 1.1rem;
    }
