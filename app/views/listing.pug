extends layout

block content
  .listing-container
    h2 Guide Listings

    .tag-buttons
      a.tag-btn(href="/listing?tag=singleplayer" class=(selectedTag === 'singleplayer' ? 'active' : '')) Singleplayer
      a.tag-btn(href="/listing?tag=multiplayer" class=(selectedTag === 'multiplayer' ? 'active' : '')) Multiplayer
      a.tag-btn(href="/listing") All

    if data.length
      each guide in data
        .guide-card
          h3
            a(href=`/detail/${guide.Guide_ID}`)= guide.Title
          p= guide.Description.substring(0, 150) + "..."
          p.small Tag: #{guide.Tags}
    else
      p No guides found for this tag.

  style.
    .listing-container {
      max-width: 900px;
      margin: auto;
      padding: 2rem;
    }
    .tag-buttons {
      margin-bottom: 1.5rem;
    }
    .tag-btn {
      padding: 8px 16px;
      background: #3498db;
      color: white;
      margin-right: 10px;
      border-radius: 5px;
      text-decoration: none;
    }
    .tag-btn.active {
      background: #2c3e50;
    }
    .guide-card {
      background: #f4f4f4;
      padding: 1rem;
      margin-bottom: 1rem;
      border-radius: 6px;
    }
    .small {
      font-size: 0.9rem;
      color: #888;
    }
