extends layout

block content
  .main-content
    h1 #{title}

    .tag-filters
      a(href="/guides" class=!currentTag ? 'active' : '') All
      a(href="/guides/singleplayer" class=currentTag === 'singleplayer' ? 'active' : '') Singleplayer
      a(href="/guides/multiplayer" class=currentTag === 'multiplayer' ? 'active' : '') Multiplayer
      a(href="/guides/fps" class=currentTag === 'fps' ? 'active' : '') FPS

    if data && data.length > 0
      table(border=1)
        thead
          tr
            th Title
            th Author
            th Category
            th Tag
            th Actions
        tbody
          each guide in data
            tr
              td #{guide.Title || 'Untitled'}
              td #{guide.Username || 'Unknown'}
              td #{guide.Category || 'General'}
              td #{guide.Tag || guide.Tags || 'Untagged'}
              td
                a(href=`/detail/${guide.Guide_ID}`) View Details
    else
      p No guides found. 🎮

    a(href="/") ← Back to Home

    style.
      .tag-filters {
        margin-bottom: 20px;
      }
      .tag-filters a {
        display: inline-block;
        margin-right: 10px;
        padding: 5px 15px;
        background: #f0f0f0;
        border-radius: 20px;
        text-decoration: none;
        color: #333;
        transition: all 0.3s;
      }
      .tag-filters a:hover {
        background: #6a5acd;
        color: white;
      }
      .tag-filters a.active {
        background: #6a5acd;
        color: white;
        font-weight: bold;
      }