extends layout

block content
  .profile-container
    h1.profile-title #{user.Username}'s Profile

    .profile-info
      p
        strong Username:
        |  #{user.Username}

      p
        strong Email:
        |  #{user.Email || 'N/A'}

      p
        strong Guides Submitted:
        span.stat-number #{guideCount}

      p
        strong Likes Received:
        span.stat-number #{likeCount}

    if user.User_ID !== userSessionId
      .message-button
        a.button(href=`/messages/${user.User_ID}`) ðŸ“¬ Send Message

  style.
    .profile-container {
      max-width: 650px;
      margin: 3rem auto;
      padding: 2.5rem;
      background-color: #ffffff;
      border-radius: 16px;
      box-shadow: 0 6px 20px rgba(0, 0, 0, 0.06);
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .profile-title {
      font-size: 2.2rem;
      text-align: center;
      color: #2c3e50;
      margin-bottom: 2rem;
    }

    .profile-info p {
      font-size: 1.1rem;
      margin-bottom: 1.2rem;
      color: #34495e;
      display: flex;
      justify-content: space-between;
      border-bottom: 1px dashed #eee;
      padding-bottom: 0.5rem;
    }

    strong {
      color: #2ecc71;
      font-weight: 600;
    }

    .stat-number {
      color: #2c3e50;
      font-weight: bold;
      margin-left: 0.5rem;
    }

    .message-button {
      margin-top: 2rem;
      text-align: center;
    }

    .button {
      display: inline-block;
      padding: 12px 24px;
      background-color: #3498db;
      color: white;
      text-decoration: none;
      border-radius: 8px;
      font-weight: bold;
      font-size: 1rem;
      transition: background-color 0.3s ease, transform 0.2s ease;
      box-shadow: 0 2px 6px rgba(0, 0, 0, 0.08);
    }

    .button:hover {
      background-color: #2980b9;
      transform: translateY(-2px);
    }
